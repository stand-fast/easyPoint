<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyPoint.dao.HometownAssociationDao">
    <resultMap id="hometownMap" type="HometownAssociation">
        <id column="association_id" property="associationId"/>
        <result column="association_name" property="associationName"/>
    </resultMap>

    <!-- 获取所有同乡会 -->
    <select id="getAllHometownAssociation" resultMap="hometownMap">
        SELECT association_id, association_name
        FROM hometown_association
    </select>

    <!-- 根据同乡会名称获取对应同乡会 -->
    <select id="getHometownAssociationByName" resultMap="hometownMap" parameterType="String">
        SELECT association_id, association_name
        FROM hometown_association
        WHERE association_name = #{associationName}
    </select>

    <!-- 添加同乡会 -->
    <insert id="addHometownAssociation" parameterType="String">
        INSERT INTO hometown_association (association_name)
        VALUES (#{associationName})
    </insert>

    <!-- 添加车票 -->
    <insert id="addTicket" parameterType="AssociationTicket">
        INSERT INTO ticket (association_id, departure_time, departure_day, departure_place, destination,
                            price, seat_num, seat_surplus, type)
        VALUES (#{associationId}, #{departureTime}, #{departureDay}, #{departurePlace}, #{destination},
                #{price}, #{seatNum}, #{seatNum}, #{type})
    </insert>
</mapper>
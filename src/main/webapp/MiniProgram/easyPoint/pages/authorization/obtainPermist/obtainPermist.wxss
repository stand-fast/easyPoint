/* pages/authorization/obtainPermist/obtainPermist.wxss */
Page{
    font-family:黑体;
    background-color: #fafafc;
}
.getPermission{
    width: 750rpx;
    height: 100%;
}
.getPermission image{
    margin: 140rpx 300rpx 20rpx 306rpx;
    width: 138rpx;
    height: 138rpx;
    border-radius: 20rpx;
    text-align: center;
}
.name{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 40rpx;
    color: #333;
    text-align: center;
    margin-bottom: 20rpx;
}
.hr{
    width: 650rpx;
    height: 2rpx;
    background-color: #e8e8ea;
    margin: 40rpx auto;
}
.permission_text{
    font-size: 36rpx;
    text-align: center;
    width: 100%;
    height: 44rpx;
    color: #333;
    line-height: 44rpx;
    margin: 20rpx 0;
}
.word_text{
    font-size: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
    text-align: center;
    margin: 20rpx 0;
}
.getPermission button{
    width: 630rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #00be01;
    margin: 100rpx auto;
    color: #fff;
    font-size: 36rpx;
    border-radius: 16rpx;
}
.getPermission button::after{
    border: none;
}
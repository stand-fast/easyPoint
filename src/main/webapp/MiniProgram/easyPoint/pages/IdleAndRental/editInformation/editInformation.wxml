<!--pages/IdleAndRental/editInformation/editInformation.wxml-->
<form bindsubmit="formSubmit">
    <view class="title">名称</view>
    <view class="edit">
        <input type="text" value="{{name}}" placeholder="请输入名称" placeholder-class="place"></input>
        <text bindtap="clearName">×</text>
    </view>
    <view class="title">电话</view>
    <view class="edit">
        <input type="number" value="{{phone}}" placeholder="请输入联系电话" placeholder-class="place" maxlength="11"></input>
        <text bindtap="clearPhone">×</text>
    </view>
    <view class="btn"><button form-type="submit">确定</button></view>
</form>
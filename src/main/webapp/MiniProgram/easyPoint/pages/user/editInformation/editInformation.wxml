<!--pages/user/editInformation/editInformation.wxml-->
<view class="content">
    <view class="content_title">
        <view class="firstImg"><image src="/images/icon/edit.png"></image></view>
        <view class="title_text">个人信息</view>
        <button bindtap="toEdit" class="firstbtn" ><image src="/images/icon/cusEdit.png"></image></button>
    </view>
    <form class="form_item" bindsubmit="formSubmit">
        <input class="realname" name="username" placeholder-class="placehold" placeholder="请输入您的真实姓名" type="text" value="{{username}}" disabled="{{!isEdit}}"></input>
        <view class="item">
            <text class="item_title">性别：</text>
              <view wx:if="{{isEdit}}" class="{{check==1 ? 'man_yes':'man_nor'}}" bindtap="changeSex" data-index="1"><text>♂</text>男</view>
              <view wx:if="{{isEdit}}" class="{{check==2? 'female_yes':'female_nor'}}'" bindtap="changeSex" data-index="2"><text>♀</text>女</view>
            <view wx:else class="customersex">
                <view  wx:if="{{gender==1}}">男</view>
                <view  wx:elif="{{gender==2}}">女</view>
            </view>
        </view>
        <view class="item">
            <text class="item_title">学号：</text>
            <input placeholder="请输入学号" placeholder-class="placehold" name="studentId" type="number" maxlength="12" value="{{studentId}}" disabled="{{!isEdit}}"></input>
        </view>
        <view class="item">
            <text class="item_title">年级：</text>
            <picker bindchange="changePicker" value="{{index}}" range="{{gradeSeclect}}" disabled="{{!isEdit}}">
                <input placeholder-class="placehold" placeholder="点击选择" disabled="true" value="{{grade}}" name="grade" disabled="true"></input>
            </picker>
        </view>
        <view class="item">
            <text class="item_title">专业：</text>
            <input placeholder-class="placehold" placeholder="输入专业全称" value="{{major}}" name="major" disabled="{{!isEdit}}"></input>
        </view>
        <view class="item">
            <text class="item_title">手机：</text>
            <input placeholder="请输入手机号码" placeholder-class="placehold" name="phone" type="number" maxlength="11" value="{{phone}}" bindinput="watchTel" disabled="{{!isEdit}}" ></input>
        </view>
         <view class="item_last" wx:if="{{isChangePhone}}">
            <text class="item_title_last">验证码：</text>
            <input placeholder="请输入验证码" placeholder-class="placehold" name="verification" type="number" maxlength="11" value="{{verification}}"></input>
            <button bindtap="getVerification" disabled="{{disabled}}">{{word}}</button>
        </view>
        <view class="submitBtn" wx:if="{{isEdit}}"><button form-type="submit">保存</button></view>
    </form>
</view>

/* pages/user/changeTime/changeTime.wxss */
Page{
    background-color: #f2f2f2;
    font-family: 黑体;
}
.Content{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    font-size: 30rpx;
    border-top: 50rpx solid #f2f2f2;
}
.title{
    color: #333;
    padding-left: 40rpx;
}
input{
    width: 400rpx;
    font-size: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    padding-left: 10rpx;
}
.Content image{
    width: 40rpx;
    height: 40rpx;
    margin: auto 40rpx;
    padding-left: 40rpx;
}
.submitBtn{
    width:300rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #56b4f6;
    color: #fff;
    font-size: 30rpx;
    margin: 100rpx auto;
    border: none;
    border-radius: 8rpx;
}
.submitBtn::after{
    border: none
}
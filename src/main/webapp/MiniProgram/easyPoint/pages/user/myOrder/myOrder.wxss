/* pages/user/myOrder/myOrder.wxss */
Page{
    background-color: #f2f2f2;
    font-family: 黑体;
}
.header{
    width: 100%;
    height: 90rpx;
    background-color: #fff
}
.nav_switch{
    width: 80%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    margin: 0 auto;
}
.on{
    color: #56b4f6!important;
    border-bottom: 4rpx solid #56b4f6;
}
.nav_text{
    width: 100rpx;
    height: 88rpx;
    line-height: 86rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 30rpx;
    color: #999;
}
.ticket_list{
    width: 100%;
    height: 240rpx;
    background-color: #fff;
    border-top: 10rpx solid #f2f2f2;
}
.go_time_text{
    width: 100rpx;
    height: 34rpx;
    line-height: 34rpx;
    color: #666;
    font-size: 24rpx;
    margin: 20rpx 0 10rpx 48rpx;
}
.go_time{
    width: 300rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #333;
    margin: 20rpx 0 10rpx 20rpx;
}
.ticket_type{
    width: 200rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #56b4f6;
    margin: 20rpx 0 10rpx 40rpx;
    text-align: right;
}
.ticket_time,.ticketContent{
    display: flex;
    flex-direction: row;
}
.content_left{
    margin-top: 32rpx;
}
.content_right{
    margin-top: 20rpx;
}
.line{
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;
}
.circle{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border:2rpx solid #56b4f6;
    margin: 0rpx 20rpx 0 48rpx;
}
.address_text{
    width: 90rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 24rpx;
    color: #666;
}
.address{
    width: 400rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 30rpx;
    color: #333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.status{
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #333;
    margin-left: 20rpx;
    text-align: right;
}
.statusOrder{
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #333;
    text-align: left;
}
.heng{
    width: 4rpx;
    height: 58rpx;
    background-color: #56b4f6;
    margin-left: 59rpx;
}
.last{
    margin-top: 32rpx;
}
.noOrder{
    font-size: 30rpx;
    color: #999;
    margin-top:230rpx;
    text-align: center;
}
.rent_item{
    width: 100%;
    height: 220rpx;
    background-color: #fff;
    margin-top: 8rpx;
}
.rent_item_list_pic_detail,.list_detail_line{
    display: flex;
    flex-direction: row;
    color: #333;
}
.list_detail_line{
    margin-top: 32rpx;
}
.rent_item_list_goodname{
    font-size: 30rpx;
    width: 390rpx;
    height: 46rpx;
    line-height: 46rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.rent_litem_list_goodPrice{
    font-size: 30rpx;
    width: 120rpx;
    height: 46rpx;
    line-height: 46rpx;
    font-family: 微软雅黑;
    margin:0 50rpx 0 20rpx;
    text-align: right;
}
.rent_item_list_goodDecription{
    width: 450rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 26rpx;
    color: #666;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.rent_item_list_goodNumber{
    width: 60rpx;
    font-size: 26rpx;
    color: #666;
    height: 40rpx;
    line-height: 40rpx;
    margin-left: 18rpx;
    text-align: right;
}
.rent_item image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 8rpx;
    margin:32rpx 18rpx 0rpx 32rpx;
}
.rent_item_list_footer{
    height: 50rpx;
    font-size: 26rpx;
    color: #666;
    margin: 10rpx 0rpx 0rpx 32rpx;
    padding-right: 50rpx;
    text-align: right;
}
.rent_item_list_footer text{
    padding-left: 20rpx;
    padding-bottom: 20rpx; 
    font-size: 30rpx;
    color: #56b4f6;
}
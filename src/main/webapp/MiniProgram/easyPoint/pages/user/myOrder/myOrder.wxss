/* pages/user/myOrder/myOrder.wxss */
Page{
    background-color: #f2f2f2;
    font-family: 黑体;
}
.header{
    width: 100%;
    height: 90rpx;
    background-color: #fff
}
.nav_switch{
    width: 80%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    margin: 0 auto;
}
.on{
    color: #56b4f6!important;
    border-bottom: 4rpx solid #56b4f6;
}
.nav_text{
    width: 100rpx;
    height: 88rpx;
    line-height: 86rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 30rpx;
    color: #999;
}
.ticket_list{
    width: 100%;
    height: 240rpx;
    background-color: #fff;
    border-top: 10rpx solid #f2f2f2;
}
.go_time_text{
    width: 100rpx;
    height: 34rpx;
    line-height: 34rpx;
    color: #666;
    font-size: 24rpx;
    margin: 20rpx 0 10rpx 48rpx;
}
.go_time{
    width: 300rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #333;
    margin: 20rpx 0 10rpx 20rpx;
}
.ticket_type{
    width: 200rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #56b4f6;
    margin: 20rpx 0 10rpx 40rpx;
    text-align: right;
}
.ticket_time,.ticketContent{
    display: flex;
    flex-direction: row;
}
.content_left{
    margin-top: 32rpx;
}
.content_right{
    margin-top: 20rpx;
}
.line{
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;
}
.circle{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border:2rpx solid #56b4f6;
    margin: 0rpx 20rpx 0 48rpx;
}
.address_text{
    width: 90rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 24rpx;
    color: #666;
}
.address{
    width: 400rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 30rpx;
    color: #333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.status{
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #333;
    margin-left: 20rpx;
    text-align: right;
}
.heng{
    width: 4rpx;
    height: 58rpx;
    background-color: #56b4f6;
    margin-left: 59rpx;
}
.last{
    margin-top: 32rpx;
}
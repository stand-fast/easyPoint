<!--pages/user/myOrderCarDetail/myOrderCarDetail.wxml-->
<view class="header">
    <view class="item first">
        <view class="item_text">出发时间</view>
        <view class="time">{{ticketDetail.departureTime}}</view>
    </view>
    <view class="item">
        <view class="item_text">出发地</view>
        <view class="item_address">{{ticketDetail.departurePlace}}</view>
    </view>
    <view class="item">
        <view class="item_text">目的地</view>
        <view class="item_address">{{ticketDetail.destination}}</view>
    </view>
</view>
<view class="passengers">
    <view class="item" wx:if="{{current==0}}">
        <view class="passen_text">正式票￥<text>{{ticketDetail.price}}</text></view>
        <view class="passenNum">{{ticketDetail.ticketNum}}张</view> 
    </view>
    <view class="item" wx:else>
        <view class="passen_text">乘客数</view>
        <view class="passenNum">{{ticketDetail.travelNum}}位</view>
    </view>

    <view class="item" wx:if="{{current==0}}">
        <view class="passen_text">已付款</view>
        <view class="passen_price">合计 ￥<text>{{ticketDetail.price}}</text></view>
    </view>
    <view class="item" wx:else>
        <view class="passen_text">已支付定金</view>
        <view class="passen_price">合计 ￥<text>{{ticketDetail.deposit}}</text></view>
    </view>
</view>
<view class="responser">
    <view class="responser_text">联系人</view>
    <view class="item" wx:for="{{ticketDetail.passengers}}" wx:key="{{index}}">
        <view class="responser_people">{{item.name}}</view>
        <view class="responser_phone">{{item.phone}}</view>
    </view>
</view>
<view class="hr"></view>
<view class="driver_info">
    <view class="driver_info_item">司机姓名：   {{driverInfos.driverName}}</view>
    <view class="driver_info_item">联系方式：   <text>{{driverInfos.driverPhone}}</text></view>
    <view class="driver_info_item">车牌号码：   {{driverInfos.driverCarNumber}}</view>
</view>
<view class="hr" wx:if="{{current==1}}"></view>
<view class="apply_refund" bindtap="applyRefund" wx:if="{{current==1}}">申请退款<text>（只能在发车前一天修改）</text></view>
<view class="hr"></view>
<view class="changeTicket" bindtap="changeTime">更换时间<text>（只能在发车前一天修改）</text></view>
<view class="hr"></view>
<!--pages/internship/internship.wxml-->
<import src='/template/internship.wxml'/>
<view>
    <view class='nav'>
        <view class='nav_switch'>
            <view class="{{currentTab==0 ? 'on' :''}} nav_text_partime" data-current='0' bindtap="swichNav">兼职</view>
            <view class="{{currentTab==1 ? 'on' : ''}} nav_text_partime" data-current='1' bindtap="swichNav">实习</view>
        </view>
        <view class='nav_search'>
            <input class='search_input' placeholder='请输入搜索信息'  type='text' placeholder-class='inputPh' bindinput="takeValue"></input>
            <icon type='search' class='search_icon' size='20' bindtap='searchJob'></icon>
        </view>
    </view>
    <view wx:if="{{currentTab == 0}}" class="leaveTop">
        <block wx:for="{{partimeInfo}}" wx:for-item="item" wx:key="id">
            <template is="internship" data='{{item}}'/>
        </block>
    </view>
    <view wx:if="{{currentTab == 1}}" class="leaveTop">
        <block wx:for="{{internshipInfo}}" wx:for-item="item" wx:key="id">
            <template is="internship" data='{{item}}'/>
        </block>
        <block wx:if="{{internshipInfo.length > pageSize-1}}">
            <block wx:if="{{updateLoadShow}}">
                <text class="doc-description">—下拉加载更多—</text>
                <updateLoad :loading="updateLoadShow"></updateLoad>
            </block>
            <view class="doc-description" wx:else>
                <text>—我是有底线的—</text>
            </view>
        </block>
    </view>
</view>
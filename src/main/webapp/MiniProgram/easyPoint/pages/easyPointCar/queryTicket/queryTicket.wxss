/* pages/easyPointCar/queryTicket/queryTicket.wxss */
Page{
    background-color: #f2f2f2;
    font-family: 黑体;
}
.queryTicket{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 260rpx;
    margin: 24rpx auto;
    z-index: 0;
    background-size:cover;
    /* box-shadow:0 0 20rpx #ccc; */
}
.ticket_left{
    width: 70%;
    height: 260rpx;
    /* background-image: radial-gradient(circle at 244rpx 16rpx ,transparent 0%, transparent 16rpx,#fff 16rpx, #fff 100%);
    background-position: 242rpx -16rpx; */
}
.ticket_right{
    width: 30%;
    height: 260rpx;
    /* background-image: radial-gradient(circle at 174rpx 16rpx ,transparent 0%, transparent 16rpx,#fff 16rpx, #fff 100%);
    background-position: 242rpx -16rpx; */
}
.gotime{
    width: 100%;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    /* background-image: radial-gradient(circle at 244rpx 0rpx ,transparent 0%, transparent 16rpx,#56b4f6 16rpx, #56b4f6 100%);
    background-position: 240rpx 0rpx; */
}
.gotime text{
    width: 164rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #fff;
    margin-left: 60rpx;
    margin-top: 12rpx;
}
.gotime view{
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #fff;
    margin-top: 12rpx;
}
.content_flex{
    width: 100%;
    height: 164rpx;
    display: flex;
    flex-direction: row;
}
.flex_left{
    width: 6rpx;
    height: 70rpx;
    background-color: #7ecef4;
    margin: 38rpx 8rpx 0rpx 84rpx;
}
.ticket_left_item{
    width: 100%;
    display: flex;
    flex-direction: row
}
.dot{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border: 1rpx solid #7ecef4;
    background-color: #7ecef4;
    margin: 32rpx 8rpx 0rpx -21rpx;
}
.ticket_left_item text{
    width:60rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 26rpx;
    color: #999;
    margin: 20rpx 10rpx 10rpx 8rpx;
}
.item_text{
    width: 300rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 30rpx;
    color: #333;
    margin: 18rpx 12rpx 0rpx 8rpx;
}
.ticketType{
    width: 100%;
    height: 60rpx;
    padding-top: 14rpx;
    /* background-image: radial-gradient(circle at 174rpx 0rpx ,transparent 0%, transparent 16rpx,#56b4f6 16rpx, #56b4f6 100%);
    background-position: 240rpx 0rpx; */
}
.ticketType text{
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    font-size: 26rpx;
    margin-left: 50rpx;
}
.right_contain{
    height: 164rpx;
    border-left: 4rpx dashed #eee;
}
.ticketPrice{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 40rpx;
    color: #333;
    font-family: 微软雅黑;
    margin-left: 50rpx;
}
.ticket_right button{
    width: 120rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 0rpx;
    font-size: 30rpx;
    background-color: #7ecef4;
    color: #fff;
    margin-left: 42rpx;
}
.ticket_right button::after{
    border: none;
}
.ticketRemain{
    font-size: 26rpx;
    color: #999;
    margin-top: 16rpx;
    margin-left: 46rpx;
}
.noTicket{
    width: 100%;
    line-height: 60rpx;
    margin-top: 45%;
    text-align: center;
    font-size: 32rpx;
    color: #999;
}
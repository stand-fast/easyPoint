<!--pages/easyPointCar/changeContact/changeContact.wxml-->
<view class="item_list" wx:for="{{item_list}}" wx:key="{{index}}">
    <view class="item_list_circle"  bindtap="onPonstant" data-index="{{index}}">
        <image src="/images/icon/tuandui.png"></image>
    </view>
    <view class="item_list_contact" bindtap="onPonstant" data-index="{{index}}">
        <view class="name">{{item.name}}</view>
        <view class="phone">{{item.phone}}</view>
    </view>
    <view class="item_list_button">
        <text class="button" bindtap="change" data-index="{{index}}">修改</text>
        <text class="shu"> | </text>
        <text class="button" bindtap="deleteContact" data-index="{{index}}">删除</text>
    </view>
</view>
<view class="btn"><button bindtap="addContact">添加联系人</button></view>
<block wx:if="{{showModal}}">
    <form bindsubmit="trueBtn">
        <view class='mask_layer' bindtap="hide_modal"/>
        <view class='modal_box'>
            <view class="title">添加联系人</view>
            <view class="modal_box_text">姓名</view>
            <input type="text" name="name" value="{{name}}" placeholder="请输入姓名"></input>
            <view class="modal_box_text">联系电话</view>
            <input type="number" name="phone" value="{{phone}}" placeholder="请输入电话" placeholder-class="place" maxlength="11" ></input>
            <button class="success_btn" form-type="submit">保存</button>
        </view>
    </form>
</block>

<block wx:if="{{showModaladd}}">
    <form bindsubmit="trueBtnadd">
        <view class='mask_layer' bindtap="hide_modaladd"/>
        <view class='modal_box'>
            <view class="title">添加联系人</view>
            <view class="modal_box_text">姓名</view>
            <input type="text" name="name" placeholder="请输入姓名"></input>
            <view class="modal_box_text">联系电话</view>
            <input type="number" name="phone"  placeholder="请输入手机号码" placeholder-class="place" maxlength="11"></input>
            <button class="success_btn" form-type="submit">保存</button>
        </view>
    </form>
</block>
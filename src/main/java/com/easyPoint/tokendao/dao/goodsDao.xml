                inventory,
            </if>
            <if test="sales != null">
                sales,
            </if>
            <if test="detailsInfo != null">
                detailsInfo,
            </if>
            <if test="img != null">
                img,
            </if> 
            <if test="type != null">
                type,
            </if> 
            <if test="merchantId != null">
                merchantId
            </if>               
        </trim>
 	</insert>
 	
 	<delete id="deleteGoods" parameterType="String">
 		delete from goodsTable where goodsId = #{goodsId}
 	</delete>
 	
 	<update id="updateGoods" parameterType="Goods">
 		update goodsTable
 		<set>
 			<if test="goodName != null">
                goodName = #{goodName},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="freight != null">
                freight = #{freight},
            </if>
            <if test="inventory != null">
                inventory = #{inventory},
            </if>
            <if test="sales != null">
                sales = #{sales},
            </if>
            <if test="detailsInfo != null">
                detailsInfo = #{detailsInfo},
            </if>
            <if test="img != null">
                img = #{img},
            </if> 
            <if test="type != null">
                type = #{type},
            </if> 
            <if test="merchantId != null">
                merchantId = #{merchantId}
            </if>
 		</set>
 		where goodId = #{goodId}
 	</update>
 	
 	<select id="selectGoods" parameterType="Goods" resultType="Goods">
 		select * from goodsTable
 		<where>
 			<if test="goodId != null">
                goodId,
            </if>
            <if test="goodName != null">
                goodName,
            </if>
            <if test="price != null">
                price,
            </if>
            <if test="freight != null">
                freight,

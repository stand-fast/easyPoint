<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyPoint.dao.business.GoodsOrderDao">
    <!-- 查询所有订单 -->
    <resultMap id="goodOrderDtoMap" type="goodOrderDto">
        <id property="goodOrderId" column="good_order_id"/>
        <result column="user_name" property="userName"/>
        <result column="phone" property="phone"/>
        <result column="number" property="number"/>
        <result column="lease_date" property="leaseDate"/>
        <result column="size" property="size"/>
        <result column="total_price" property="totalPrice"/>
        <result column="receive_time" property="receiveTime"/>
        <result column="make_order_time" property="makeOrderTime"/>
        <result column="state" property="state"/>
        <result column="transaction_id" property="transactionId"/>
        <association property="goodsDtoForOrder" javaType="goodsDtoForOrder">
            <result column="good_name" property="goodName"/>
            <result column="business_name" property="businessName"/>
            <result column="deposit" property="deposit"/>
            <result column="pro_img" property="proImg"/>
        </association>
    </resultMap>
    <select id="findAllOrder" parameterType="integer" resultMap="goodOrderDtoMap">
        SELECT o.good_order_id,
        o.total_price,
        o.user_name,
        o.phone,
        o.number,
        o.size,
        o.lease_date,
        o.make_order_time,
        o.receive_time,
        o.state,
        o.transaction_id,
        t.good_name,
        t.business_name,
        t.deposit,
        t.pro_img
        FROM good_order o, goods_table t
        <where>
            o.good_id = t.good_id
            <if test="state != null and state !=''">AND o.state = #{state}</if>
        </where>
        LIMIT #{startIndex}, #{pageSize}
    </select>

    <select id="findAllOrderNum" parameterType="integer" resultType="integer">
        SELECT COUNT(*) FROM good_order
        <where>
            <if test="state != null and state != ''">state = #{state}</if>
        </where>
    </select>
</mapper>
